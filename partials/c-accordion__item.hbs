<div class="accordion__item">

	<div class="accordion__header">
		<h3 class="accordion__headline is-container">
			{{> c-cta accCta }}
		</h3>
	</div>

	<div class="accordion__content"
	     id="{{#if toggleId}}{{toggleId}}{{/if}}"
	     data-js-module="toggle"
	     data-js-options='{{#if toggleDataJsOptions}}{{toggleDataJsOptions}}{{/if}}'>
		<div class="accordion__content-inner is-container">
			{{{yield}}}
		</div>
	</div>
</div>